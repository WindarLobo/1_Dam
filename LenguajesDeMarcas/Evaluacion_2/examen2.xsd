 <xs:element name="libro">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="titulo" type="xs:string"/>
        <xs:element name="seccion">
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:maxLength value="20"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:element>
        <xs:element name="subSeccion">
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:enumeration value="Fantasticas"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:element>
        <xs:element name="contenido">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="capitulo" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="tema" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
                  </xs:sequence>
                  <xs:attribute name="materia" type="xs:string"/>
                  <xs:attribute name="num" type="xs:integer"/>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="copyright" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>


